<body>

<div class="container-order">

<h2>订单</h2>
<hr>

<h3 class="text-center">我的收藏</h3>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>Remove Favorite</th>
    </tr>
  </thead>
  <tbody>
    <% @favorite_products.each do |p| %>
      <tr>
        <td>
            <%= link_to product_path(p) do %>
              <% if p.photos.present? %>
                <%= image_tag(p.photos[0].avatar.thumb.url, class: "thumbnail") %>
              <% else %>
                <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
              <% end %>
            <% end %>
            <%= p.title %> $ <%= p.price %></td>
        <td><%= link_to("Unfavorite", favorite_path(p), method: :delete) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</body>
