<%= simple_form_for([@product, @product.comments.build]) do |f|%>

  <div class="field">
      <%= f.text_area :body, class: "form-control" %>
  </div>
  <div class="commentbutton">
  <%= f.submit "Add a comment", class: "btn btn-success" %>
</div>
<% end %>
<style >
  .commentbutton{
    margin-top: 20px;
  }
</style>
